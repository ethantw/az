
main.layout
  #input
    display block
  textarea
    $border = rgb( 75%, 70%, 55% ) 
    // posi
    position relative
    margin 1rem auto
    // box
    height 6em 
    max-height 40vh
    width 96%
    padding .25em .5em
    resize vertical
    // typo
    font-size 20px
    // style
    background-color #f0f0f0
    border 1px solid lighten( $border, 30% )
    border-radius .5rem
    color #666
    outline 0

    &:hover,
    &:focus
      background-color #f5f5f5
      border-color $border
      color #333
#utility
  display none

main article
  // posi
  margin 3rem auto
  // box
  width 96%
  padding 0
  // typo
  font-family $serif
  font-size 1.5em
  //line-height 2.5

  :link,
  :visited
    color lighten( $k-primary, 5% )
  a:hover
    color $k-danger
  a:active
    color darken( $k-danger, 20% )

  
#out
  // posi
  position: relative

  & em  .x//// right-angled
    -webkit-text-emphasis-position over

  a-z
    // posi
    cursor pointer
    // box
    display inline-block
  a-z:before
    // posi
    position absolute
    margin-left .35em
    margin-top 1.7em
    z-index 10
    // box
    content ''
    display inline-block
    // style
    background-color $k-primary
    border-radius .5em
    padding .15em

    & .x//// right-angled
      margin-top 2.3em
    & .x//// Romanisation
      margin-left .55em
      
  a-z:not(:hover):before
    opacity .7
  a-z.picking:before
    background-color $k-danger
    border .1em solid #fff
    margin-left .25em
    margin-top 1.6em

    & .x//// right-angled
      margin-top 2.2em
    & .x//// Romanisation
      margin-left .45em
  a-z.picked:before
    background-color $k-info
    
  button#play
    // posi
    float left 
    margin -1em .5em 0 .5em
    // box
    display none
    height 1.8em
    width 1.8em
    overflow hidden
    // typo
    font-family $sans
    font-size 1.5em
    // style
    background-color rgb(  80%, 55%, 45% )
    border 0
    border-radius 50%
    color transparent
  button#play:before
    content 'å”¸'
    color rgba( #fff, .7 )
    font-weight bold
    line-height 1.75

#pickr
  // posi
  position absolute
  margin 2.7em 0 0 -1.25em
  // box
  min-width 4em
  padding .5em 1em
  // typo
  list-style none
  // style
  background-color #fff
  border-bottom 2px solid rgba( $k-success, .7 )
  border-radius .5em

  & .x//// right-angled
    margin-top 3.5em
  & .x//// Romanisation
    margin-top 2em

  &
    display none
  .picking &
    display block

  li
    // posi
    margin-right .5em
    // box
    display inline-block
    width 1.5em
    padding .5em .75em .1em .25em
    // typo
    font-family $zhuyin, $sans
    font-size .75em
    text-align left
    // style
    cursor pointer
  li:last-child
    margin-right .125em

