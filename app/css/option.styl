
@keyframes slide-up
  from
    bottom -100vh
  to
    bottom 0
@keyframes slide-down
  from 
    bottom 0
  to
    bottom -100vh

#option.layout
  // posi
  position fixed
  // box
  height 70vh
  // style
  background-color rgb( 80%, 70%, 45% ) 
  box-shadow inset 0 .8rem .5rem darken( @background-color, 5% ), 0 .5rem 1rem darken( @background-color, 52% )
  color #333

  [data-option=false][data-init=true] &
    display none
  [data-option=false][data-init=false] &
    -moz-animation    slide-down .5s
    -ms-animation     slide-down .5s
    -webkit-animation slide-down .5s
    animation         slide-down .5s
    -moz-animation-fill-mode:    forwards
    -ms-animation-fill-mode:     forwards
    -webkit-animation-fill-mode: forwards
    animation-fill-mode:         forwards
  [data-option=true] &
    -moz-animation    slide-up .5s
    -ms-animation     slide-up .5s
    -webkit-animation slide-up .5s
    animation         slide-up .5s

  button
    // box
    display block
    // style
    background none
    border 0
    color #111
  button.close
    position relative
    z-index 100
  button.close:not(:hover)
    opacity .75
  button.close:first-of-type
    // posi
    position absolute
    top .4em
    right @top + .2em
    // box
    height 1.5em
    width 1.5em
    overflow hidden
    // style
    //background red
    color transparent
    +fh( close, #dca )
      font-size 1.2em
      text-shadow 0 1px 0 #a85
  button.close:last-of-type
    // posi
    margin -.8em 1em 0
    // box
    height 1.65em
    width 2.5em
    overflow hidden
    padding .125em .5em
    // style
    background-color $k-primary
    border 1px solid darken( $k-primary, 5% )
    border-radius .25em
    color transparent
    &:before
      content 'å¥½'
      color #eee
  ul
    // box
    padding .5em 1em
    // typo
    list-style none
  li
    margin .5em 0 1em
  li button
    // posi
    margin-top .25em
    // box
    padding .3em .5em
    // style
    background-color rgba( #fff, .1 )
    border 1px solid rgba( #985, .7 )
    border-radius .25em

    +fha( caret-down )
      // box
      padding-left .3em
      vertical-align -.05em
      // typo
      font-size 1.1em
      // style
      color #63541f
    &:hover
      background-color rgba( #eee, .3 )
      border-color #985 
      fha-color( #111 )

